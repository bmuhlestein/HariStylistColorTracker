<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhlestein.haristylistcolortracker.Welcome">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:background="@drawable/pink_to_black_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="70sp"
            android:textAlignment="center"
            android:textColor="@color/darkerPurple"
            android:id="@+id/my_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placeholder - This will be the login users name"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/darkerPurple"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Enter New Client"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/lightPurple"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
